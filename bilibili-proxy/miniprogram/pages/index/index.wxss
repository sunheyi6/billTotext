.container {
  padding: 30rpx;
  background: #f5f5f5;
  min-height: 100vh;
}

/* 状态栏 */
.status-bar {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
}

.status-label {
  font-size: 28rpx;
  color: #666;
}

.status-value {
  font-size: 28rpx;
  font-weight: bold;
  margin-left: 10rpx;
}

.status-value.ok {
  color: #07c160;
}

.status-value.error {
  color: #fa5151;
}

/* 标题 */
.header {
  text-align: center;
  margin-bottom: 50rpx;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.subtitle {
  font-size: 26rpx;
  color: #999;
}

/* 输入区 */
.input-section {
  display: flex;
  gap: 20rpx;
  margin-bottom: 20rpx;
}

.mid-input {
  flex: 1;
  height: 88rpx;
  padding: 0 30rpx;
  background: #fff;
  border-radius: 12rpx;
  font-size: 30rpx;
  border: 2rpx solid #e0e0e0;
}

.query-btn {
  width: 160rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  border-radius: 12rpx;
}

.tips {
  text-align: center;
  margin-bottom: 40rpx;
}

.tips text {
  font-size: 24rpx;
  color: #999;
}

/* 错误提示 */
.error-box {
  padding: 30rpx;
  background: #fff0f0;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  border: 2rpx solid #ffcdd2;
}

.error-text {
  font-size: 28rpx;
  color: #f44336;
}

/* 信息卡片 */
.info-card {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx;
  box-shadow: 0 4rpx 20rpx rgba(0,0,0,0.08);
}

.card-header {
  display: flex;
  align-items: center;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-right: 30rpx;
  border: 4rpx solid #ff6b6b;
}

.basic-info {
  flex: 1;
}

.name {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.level {
  font-size: 24rpx;
  color: #ff6b6b;
  background: #fff0f0;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
}

.divider {
  height: 2rpx;
  background: #f0f0f0;
  margin: 30rpx 0;
}

/* 统计数据 */
.stats-row {
  display: flex;
  justify-content: space-around;
}

.stat-item {
  text-align: center;
}

.stat-num {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #999;
}

/* 签名 */
.sign-box {
  background: #f8f8f8;
  padding: 24rpx;
  border-radius: 12rpx;
}

.sign-label {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
}

.sign-text {
  font-size: 28rpx;
  color: #555;
  line-height: 1.6;
}

.copy-btn {
  margin-top: 30rpx;
  background: #ff6b6b;
  color: #fff;
  border-radius: 12rpx;
}

/* 底部 */
.footer {
  margin-top: 50rpx;
  text-align: center;
}

.cache-btn {
  font-size: 26rpx;
  color: #999;
  text-decoration: underline;
}
